/* ========== PARSER DEFINITION FOR SIMPLE LANGUAGE ========== */

/* INICIA Secci贸n de TOKENS */
%token LET IF WHILE ASSIGN PLUS MINUS MULT DIV GT LT EQ
%token LPAREN RPAREN LBRACE RBRACE ID NUMBER WS
IGNORE WS

/* FINALIZA Secci贸n de TOKENS */

%%

/* INICIA Secci贸n de PRODUCCIONES */

program:
	statement_list
;

statement:
    var_decl
  | if_stmt
  | while_stmt
  | expression
  | block
;

var_decl:
    LET ID ASSIGN expression
;

if_stmt:
    IF expression block
;

while_stmt:
    WHILE expression block
;

block:
    LBRACE statement_list RBRACE
;

statement_list:
    statement_list statement
  | statement
;

expression:
		expression PLUS term
  | expression MINUS term
  | expression EQ term
  | term
;

term:
    term MULT factor
  | term DIV factor
  | factor
;

factor:
		ID
  | NUMBER
;

/* FINALIZA Secci贸n de PRODUCCIONES */
